mixin navigationWrapperItem(text, href)
  li.header__navigation-wrapper-item
    a(class=`header__navigation-wrapper-link text-h-25`, href=`${href}.html`)= text

mixin button(text, className, type, disabled)
  button(
    class=`${className} button text-b18`
    type=`${type}`
    disabled= disabled)= text
    block

mixin popularItem(imgName, h3Text, spanText)
  li.popular__item
    a(href="#").popular__item-link
      div.popular__content-block
        div.popular__stock-block.stock-block
          span.stock-block__discount.stock-block__discount--active %
        div.popular__image-block
          picture
            source(
              media="(max-width: 767px)",
              type="image/webp",
              srcset=`img/${imgName}@1x.webp 1x, img/${imgName}@2x.webp 2x`
            )
            source(
              media="(max-width: 1023px)",
              type="image/webp",
              srcset=`img/${imgName}@1x.webp 1x, img/${imgName}@2x.webp 2x`
            )
            source(
              type="image/webp",
              srcset=`img/${imgName}@1x.webp 1x, img/${imgName}@2x.webp 2x`
            )
            source(
              media="(max-width: 767px)",
              type="image/png",
              srcset=`img/${imgName}@1x.png 1x, img/${imgName}@2x.png 2x`
            )
            source(
              media="(max-width: 1023px)",
              type="image/png",
              srcset=`img/${imgName}@1x.png 1x, img/${imgName}@2x.png 2x`
            )
            img(
              src=`img/${imgName}@1x.png`,
              srcset=`img/${imgName}@2x.png 2x`,
              alt="/"
            )
        div.popular__text-block
          h3=h3Text
          span=`${spanText}â‚½`

mixin link(href, className, text)
  a(
    href=`${href}`
    class=`${className}`
    )
    span=text

mixin contentLeftBlockItem(href, title)
